<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.badredinebelhadef.etnaapp.HomeActivity"
    tools:showIn="@layout/app_bar_home">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timeWorkText"
        android:textSize="18sp"
        android:text="Temps de travail"
        android:typeface="normal"
        android:textStyle="normal|bold|italic"
        android:textColor="@color/colorPrimary"
        android:paddingLeft="25dp"
        android:background="#bce8f1"
        android:textAlignment="textStart"
        android:layout_alignEnd="@+id/progressBarLog"
        android:layout_alignStart="@+id/progressBarLog" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/compagnieName"
        android:textSize="30sp"
        android:typeface="normal"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_below="@+id/timeWorkText"
        android:layout_marginTop="21dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_alignStart="@+id/timeWorkText"
        android:layout_alignEnd="@+id/timeWorkText"
        android:text="MEDIACTIVE DIGITALE" />


    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:id="@+id/progressBarLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="27"
        android:maxHeight="30dp"
        android:layout_marginRight="50dp"
        android:secondaryProgress="0"
        android:indeterminate="false"
        android:minHeight="42dp"
        android:layout_below="@+id/startRun"
        android:layout_alignStart="@+id/startRun" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/infoDayLog"
        android:textSize="14sp"
        android:typeface="normal"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_below="@+id/compagnieName"
        android:layout_alignStart="@+id/startRun"
        android:layout_marginTop="15dp"
        android:layout_alignEnd="@+id/compagnieName"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/endRun"
        android:textStyle="normal|bold"
        android:text="End RUN"
        android:textSize="15sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_alignBaseline="@+id/startRun"
        android:layout_alignBottom="@+id/startRun"
        android:layout_alignEnd="@+id/progressBarLog" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startRun"
        android:textStyle="normal|bold"
        android:text="Start RUN"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="21dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_below="@+id/infoDayLog"
        android:layout_alignParentStart="true" />

</RelativeLayout>
